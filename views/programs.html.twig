<html>
<head>
    <title>Programs</title>
    <link rel="stylesheet" href="/css/style.css"/>
</head>
<body>
    <p>
        <a href="/">Add new program</a>
    </p>

    <table>
        {% for program in programs %}
        <tr>
            <td>Date</td>
            <td>{{ program.date|e }}</td>
        </tr>
        <tr>
            <td>Time</td>
            <td>{{ program.time|e }}</td>
        </tr>
        <tr>
            <td>Lead text</td>
            <td>{{ program.leadText|e }}</td>
        </tr>
        <tr>
            <td>Name</td>
            <td>{{ program.name|e }}</td>
        </tr>
        <tr>
            <td>B-Line</td>
            <td>{{ program.bLine|e }}</td>
        </tr>
        <tr>
            <td>Synopsis</td>
            <td>{{ program.synopsis|e }}</td>
        </tr>
        <tr>
            <td>Url</td>
            <td>{{ program.url|e }}</td>
        </tr>
        <tr>
            <td>Actions</td>
            <td><a href="/delete-program/{{ program.id }}">Delete</a></td>
        </tr>
        <tr>
            <td colspan="2">&nbsp;</td>
        </tr>
        {% endfor %}
    </table>

    {% if paging.prev != NULL %}
    <a href="{{ paging.prev }}">Previous</a>&nbsp;&nbsp;
    {% endif %}

    {% if paging.next != NULL %}
    <a href="{{ paging.next }}">Next</a>
    {% endif %}

</body>
</html>
